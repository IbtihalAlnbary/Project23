  margin-bottom: 20px;
  text-align: center;
}
.rating-box .stars {
  display: flex;
  align-items: center;
  gap: 25px;
}
.stars i {
  color: #e6e6e6;
  font-size: 35px;
  cursor: pointer;
  transition: color 0.2s ease;
}
.stars i.active {
  color: #ff9c1a;
}
#the python part of the rating website:
stars = [elem for elem in document.querySelectorAll(".stars i")]
for index1, star in enumerate(stars):
    star.addEventListener("click", lambda: 
        [star.classList.add("active") if index1 >= index2 else star.classList.remove("active") for index2, star in enumerate(stars)]
    )

